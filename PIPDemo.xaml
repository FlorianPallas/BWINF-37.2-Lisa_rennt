<Window x:Class="Aufgabe1.PIPDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aufgabe1"
        mc:Ignorable="d"
        Title="Punkt-In-Polygon Demo" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Polygon" Click="MenuItemPolygon_Click" />
            <MenuItem Header="_Point" Click="MenuItemPoint_Click" />
            <Separator />
            <MenuItem Header="_Clear" Click="MenuItemClear_Click" />
            <MenuItem Header="_+" Click="MenuItemIncrease_Click" />
            <MenuItem Header="_-" Click="MenuItemDecrease_Click" />
        </Menu>
        <Canvas Name="ZeichenCanvas" ClipToBounds="True" MouseRightButtonDown="ZeichenCanvas_MouseRightButtonDown" MouseMove="ZeichenCanvas_MouseMove" MouseLeftButtonDown="ZeichenCanvas_MouseLeftButtonDown" Background="White" />
    </DockPanel>
</Window>
